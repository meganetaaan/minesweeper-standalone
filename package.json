    "minesweeper-engine": "^0.3.3",
    "react": "^15.0.2",
    "react-dom": "^15.0.2"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint-plugin-react": "^5.1.1",
    "exorcist": "^0.4.0",
    "live-server": "^1.0.0",
    "watchify": "^3.7.0"
  },
  "bugs": {
